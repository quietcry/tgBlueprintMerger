{
  "name": "tg-merge-blueprint",
  "displayName": "tgBlueprintMerger - Home Assistant Blueprint Merger",
  "description": "Save and merge Home Assistant Blueprint files using tgBlueprintMerger. Enables modular development of complex Home Assistant automations by splitting blueprints into reusable components.",
  "version": "2026.01.001",
  "publisher": "tg",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tgMerge.saveAndMerge",
        "title": "%command.title%",
        "icon": "$(merge)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "tgMerge.saveAndMerge",
          "when": "resourceExtname == '.yaml' && resourceFileName =~ /_.*\\.yaml$/",
          "group": "navigation",
          "alt": "tgMerge.saveAndMerge"
        }
      ],
      "editor/title/context": [
        {
          "command": "tgMerge.saveAndMerge",
          "when": "resourceExtname == '.yaml' && resourceFileName =~ /_.*\\.yaml$/",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "tgMerge.saveAndMerge",
          "when": "resourceExtname == '.yaml'"
        }
      ]
    },
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "tgBlueprintMerger.scriptPath": {
          "type": "string",
          "default": "",
          "description": "%config.scriptPath.description%",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "echo 'No prepublish needed'"
  }
}


